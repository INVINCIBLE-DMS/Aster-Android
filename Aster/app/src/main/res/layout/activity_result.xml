<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.result.activity.ResultActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_result"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/iv_ranking_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'이의진' 님과의 궁합률은"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_ranking_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10%"
        android:layout_marginStart="150dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/bold"
        app:layout_constraintEnd_toStartOf="@id/tv_ranking_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_ranking_is"/>

    <TextView
        android:id="@+id/tv_ranking_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입니다!"
        android:textSize="20sp"
        android:fontFamily="@font/regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_ranking_percent"
        app:layout_constraintTop_toTopOf="@id/tv_ranking_percent"
        app:layout_constraintBottom_toBottomOf="@id/tv_ranking_percent"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:text="확인했습니다"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/my_page_btn_back"
        android:backgroundTint="@color/strong_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>