<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp"/>
                    <solid android:color="@color/white"/>
                    <stroke android:width="2dp" android:color="@color/white_pink"/>
                </shape>
            </item>
            <item android:drawable="@drawable/radio_bg" android:top="6dp" android:start="6dp"
                android:end="6dp" android:bottom="6dp">

                <color android:color="@color/white_pink"/>
            </item>
        </layer-list>

    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <stroke android:width="2dp"
                        android:color="@color/white_pink"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>